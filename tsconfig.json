{
  "compilerOptions": {
    "jsx": "react-native",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "baseUrl": ".",
    "lib": ["dom", "es2015", "es2015.promise", "es2016", "es2017"],
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true, // JSON 모듈 import 허용
    "allowSyntheticDefaultImports": true, // 기본 import 문법 허용
    "moduleResolution": "node", // 모듈 해석 방식 지정
    "typeRoots": ["./node_modules/@types"],
    "types": ["jest", "react-native"]
  },
  "include": ["src", "index.d.ts"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
